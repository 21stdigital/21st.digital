{
  "extends": ["stylelint-config-standard", "stylelint-prettier/recommended", "stylelint-config-hudochenkov/order"],
  "plugins": ["stylelint-prettier", "stylelint-order"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind", "apply", "variants", "responsive", "screen", "layer"]
      }
    ]
  }
}
