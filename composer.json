{
  "name": "tfd/21st.digital",
  "description": "A modern and dynamic corporate website for 21st digital, built using Laravel 11 and Statamic 5 CMS. This project includes advanced PHP linting, static analysis, and automated scripts to ensure code quality and streamline development workflows.",
  "scripts-descriptions": {
    "analyse": "Run PHPStan static analysis (using larastan) against your application.",
    "lint": "Run PHP linting (using Laravel Pint) against your application.",
    "test": "Run PHP Unit Tests (using Pest) against your application."
  },
  "scripts": {
    "analyse": "@php vendor/bin/phpstan analyse",
    "build": [
      "npm run build",
      "@php artisan key:generate",
      "@php please ssg:generate"
    ],
    "lint": "@php vendor/bin/pint",
    "test": "@php -d memory_limit=-1 -d max_execution_time=0 ./vendor/bin/pest",
    "pre-update-cmd": [
      "Statamic\\Console\\Composer\\Scripts::preUpdateCmd"
    ],
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi",
      "@php artisan statamic:install --ansi"
    ],
    "post-install-cmd": [
      "@php -r \"copy('fixtures/git-hooks/post-checkout', '.git/hooks/post-checkout');\"",
      "@php -r \"copy('fixtures/git-hooks/post-commit', '.git/hooks/post-commit');\"",
      "@php -r \"copy('fixtures/git-hooks/post-merge', '.git/hooks/post-merge');\"",
      "@php -r \"copy('fixtures/git-hooks/pre-push', '.git/hooks/pre-push');\"",
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-update-cmd": [
      "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
    ]
  },
  "require": {
    "php": "^8.3",
    "laravel/framework": "^11",
    "laravel/socialite": "^5.14",
    "laravel/tinker": "^2.9",
    "socialiteproviders/google": "^4.1",
    "spatie/fork": "^1.2",
    "statamic/cms": "^5.0",
    "statamic/ssg": "^3.0"
  },
  "require-dev": {
    "barryvdh/laravel-debugbar": "^3.8.1",
    "captainhook/captainhook": "^5.23",
    "captainhook/hook-installer": "^1.0",
    "fakerphp/faker": "^1.23",
    "larastan/larastan": "^2.9",
    "laravel/pint": "^1.15",
    "laravel/sail": "^1.26",
    "mockery/mockery": "^1.6",
    "nunomaduro/collision": "^8.0",
    "pestphp/pest": "^3.0",
    "ramsey/conventional-commits": "^1.5",
    "spatie/laravel-ignition": "^2.4"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "dont-discover": []
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "php-http/discovery": true,
      "pixelfear/composer-dist-plugin": true,
      "captainhook/hook-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
