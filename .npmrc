# Enforce strict versioning for Node.js and npm as defined in package.json
engine-strict=true

# Save exact versions of dependencies in package.json
save-exact=true

# Ensure npm always creates a package-lock.json file for reproducible installs
package-lock=true

# Enable npm audits to check for vulnerabilities automatically during install
audit=true

# Set a custom cache directory (optional)
# cache=~/.npm-cache

# Set a proxy if needed (optional)
# https-proxy=http://your-proxy-url

# Optionally enable more detailed logs for debugging purposes (useful for CI)
# loglevel=info

# Registry settings for private packages (optional)
# registry=https://your-private-registry-url

# Ensure that npm warns when there are any unmet peer dependencies
strict-peer-deps=true